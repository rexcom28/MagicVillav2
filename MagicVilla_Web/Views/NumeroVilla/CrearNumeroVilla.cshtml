@model MagicVilla_Web.Models.ViewModel.NumeroVillaViewModel
@{
    ViewData["Title"] = "CrearNumeroVilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="CrearNumeroVilla">
    <div class="container border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <h2 class="text-info">Crear Numero Villa</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Numero Villa</label>
                <input asp-for="NumeroVilla.VillaNo" class="form-control" />
                <span asp-validation-for="NumeroVilla.VillaNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Villa</label>
                <select asp-for="NumeroVilla.VillaId" class="form-select" asp-items="@Model.VillaList">
                    <option value="">-- seleccione una villa--</option>
                </select>
                <span asp-validation-for="NumeroVilla.VillaId" class="text-danger"></span>
            </div>
        </div>


        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Detalle Espacial</label>
                <textarea asp-for="NumeroVilla.DetallesEspeciales" class="form-control"></textarea>
                <span asp-validation-for="NumeroVilla.DetallesEspeciales" class="text-danger"></span>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Grabar</button>
            <a asp-controller="NumeroVilla" asp-action="IndexNumeroVilla" class="btn btn-success">Regresar</a>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}